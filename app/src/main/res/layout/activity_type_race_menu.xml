<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/flip_bg_dark">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_race"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/flip_accent"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_fast_score_big"
        android:textSize="16sp"
        android:textColor="@color/flip_mid"
        android:layout_marginBottom="48dp"/>

    <!-- Quiz Selection Cards -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/flip_bg_mid">

        <Button
            android:id="@+id/mathQuizButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/math_quiz_n10_quick_calculations"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/flip_tint_light"
            android:background="?attr/selectableItemBackground"
            android:padding="24dp"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/flip_bg_mid">

        <Button
            android:id="@+id/geographyQuizButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/geography_quiz_ncapitals_and_landmarks"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/flip_tint_light"
            android:background="?attr/selectableItemBackground"
            android:padding="24dp"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/flip_bg_mid">

        <Button
            android:id="@+id/scienceQuizButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/science_quiz_nchemistry_and_physics"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/flip_tint_light"
            android:background="?attr/selectableItemBackground"
            android:padding="24dp"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tip_answer_quickly_for_maximum_points_n_you_have_15_seconds_per_question"
        android:textSize="14sp"
        android:textColor="@color/flip_mid"
        android:gravity="center"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/flip_primary"
        android:padding="16dp"
        android:text="@string/back_to_games"
        android:textColor="@color/flip_tint_light"
        android:textSize="16sp" />

</LinearLayout>