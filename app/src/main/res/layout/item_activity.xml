<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/flip_bg_mid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/star_outline_icon"
            app:tint="@color/flip_accent"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/activityText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/study_for_exam"
            android:textSize="16sp"
            android:textColor="@color/flip_tint_light"/>

        <ImageView
            android:id="@+id/editActivityButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_edit_pencil"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="@color/flip_mid"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/deleteActivityButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/outline_close_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="@color/flip_mid"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>