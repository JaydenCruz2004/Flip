<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/leaderboardItemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/flip_bg_mid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Rank Badge -->
        <TextView
            android:id="@+id/rankBadge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/_1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/flip_accent"
            android:gravity="center"
            android:background="@drawable/bg_social_circle"/>

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_user"
            android:background="@drawable/bg_social_circle"
            android:padding="4dp"
            app:tint="@color/flip_mid"/>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/flip_tint_light"/>

            <TextView
                android:id="@+id/gamesPlayedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_105_games_played"
                android:textSize="12sp"
                android:textColor="@color/flip_mid"/>
        </LinearLayout>

        <!-- Points Display -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/pointsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_9_876"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/flip_accent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points"
                android:textSize="10sp"
                android:textColor="@color/flip_mid"/>
        </LinearLayout>

        <!-- Trophy icon for top 3 -->
        <ImageView
            android:id="@+id/trophyIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/star_outline_icon"
            android:visibility="gone"
            app:tint="@color/flip_accent"/>

    </LinearLayout></androidx.cardview.widget.CardView>