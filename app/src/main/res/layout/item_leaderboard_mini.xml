<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Rank Badge -->
    <TextView
        android:id="@+id/rankBadgeMini"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/flip_tint_light"
        android:background="@drawable/bg_social_circle"
        android:gravity="center"
        android:layout_marginEnd="12dp"/>

    <!-- Trophy Icon (for top 3) -->
    <ImageView
        android:id="@+id/trophyIconMini"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/star_outline_icon"
        android:layout_marginEnd="8dp"
        android:visibility="visible"/>

    <!-- Username and Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usernameMini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@username"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/flip_tint_light"/>

    </LinearLayout>

    <!-- Points -->
    <TextView
        android:id="@+id/pointsMini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,234 pts"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/flip_accent"/>

</LinearLayout>