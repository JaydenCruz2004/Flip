<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/flip_bg_mid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Term Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="@color/flip_bg_dark"
            app:hintTextColor="@color/flip_mid">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/termInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Term"
                android:textSize="16sp"
                android:textColor="@color/flip_tint_light"
                android:textColorHint="@color/flip_mid"
                android:inputType="text"
                android:maxLines="2"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Definition Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="@color/flip_bg_dark"
            app:hintTextColor="@color/flip_mid">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/definitionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Definition"
                android:textSize="16sp"
                android:textColor="@color/flip_tint_light"
                android:textColorHint="@color/flip_mid"
                android:inputType="textMultiLine"
                android:maxLines="3"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>